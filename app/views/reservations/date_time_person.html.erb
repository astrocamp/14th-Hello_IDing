<h1>第一步：選擇時間人數！</h1>

<%= form_with url: wizard_path, method: :patch, data: { turbo: false } do |f| %>
  <%= f.label :date, '日期' %>
  <%= f.date_field :date, value: session.dig(:first_step_data, 'date') %>

  <%= f.label :time, '時間' %>
  <%= f.time_field :time, value: session.dig(:first_step_data, 'time') %>

  <%= f.label :adult_num, '大人數' %>
  <%= f.number_field :adult_num, value: session.dig(:first_step_data, 'adult_num') %>

  <%= f.label :kid_num, '小孩數' %>
  <%= f.number_field :kid_num, value: session.dig(:first_step_data, 'kid_num') %>

  <%= f.submit '下一步' %>
<% end %>
