<section class="lg:flex">
  <div>
    <div class="z-10 flex justify-between drawer bg-base-100 lg:drawer-open">
      <input id="my-drawer" type="checkbox" class="drawer-toggle" />
  
      <div class="lg:hidden">
          <%= image_tag "iding_logo.png", class:" w-36 m-auto py-2" %> 
      </div>

      <div class="drawer-content lg:hidden">
          <label for="my-drawer" class="btn btn-square btn-ghost">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-5 h-5 stroke-current"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
          </label>
      </div>
      
      <div class="drawer-side">
          <label for="my-drawer" class="drawer-overlay"></label>
          <ul class="flex flex-col justify-between h-full p-4 menu w-60 bg-base-200 text-base-content lg:w-40">
            <div>
                <%= image_tag "iding_logo.png", class:"w-40 m-auto py-2" %> 
                <li class="my-2 mt-6 font-semibold text-slate-700"><a class="m-auto">訂位列表</a></li>
                <li class="m-auto my-2 font-semibold text-slate-700"><a class="m-auto">歷史紀錄</a></li>
                <li class="m-auto my-2 font-semibold text-slate-700"><a class="m-auto">訂位搜尋</a></li>
                <li class="m-auto my-2 font-semibold text-slate-700"><a class="m-auto">餐廳設定</a></li>
            </div>
            <div>
                <li class="m-auto my-2 font-semibold text-slate-700"><a class="m-auto">最新通知</a></li>
                <li class="m-auto my-2 font-semibold text-slate-700"><a class="m-auto">聯繫客服</a></li>
            </div>
          </ul>
      </div>
    </div>
  </div>

  <div>
    <div class="m-2 lg:mx-4">
        <div class="flex navbar bg-base-100 my-3 border-2 rounded-xl lg:w-[86vw]">
            <div class="lg:mr-auto">
                <a class="hidden normal-case btn btn-ghost lg:flex">返回</a>
            </div>

            <div class="m-auto lg:ml-auto">
                <a class="text-xl normal-case btn btn-ghost">行事曆</a>
            </div>

            <div class="lg:ml-auto">
                <a class="hidden normal-case btn btn-ghost lg:flex">時間軸</a>
                <a class="hidden normal-case btn btn-ghost lg:flex">列表</a>
                <a class="hidden normal-case btn btn-ghost lg:flex">桌位圖</a>
            </div>
        </div>
    </div>

    <div class="w-[90vw] mx-auto my-3 border-2 rounded-xl collapse bg-base-100 lg:hidden">
      <input type="checkbox" class="hidden collapse-toggle" id="collapse-form-toggle">
      <label for="collapse-form-toggle" class="text-xl font-bold text-center cursor-pointer">
        <h1 class="text-xl font-semibold">
        <%= image_tag "logo.png", class:"inline w-14 md:w-30 xl:w-30 py-2" %>
        新增訂位
        </h1>
      </label>
      <div class="p-1 collapse-content">
        <div class="px-1 pb-1 ">
          <div class="flex gap-2">
            <input type="date" class="iding-input"/>
            <input type="time" class="iding-input"/>
          </div>

          <div class="flex gap-2">
            <input placeholder="大人" class="iding-input"/>
            <input placeholder="小孩" class="iding-input"/>
          </div>

          <input placeholder="姓名" class="iding-input"/>
          <input placeholder="電話" class="iding-input"/>
          <textarea placeholder="備註" class="iding-textarea"></textarea>
          <input placeholder="桌號" class="iding-input"/>
        </div>

        <div class="flex flex-row-reverse py-6">
          <div class="flex-initial m-auto">
            <button
              type="button"
              class="flex items-center px-5 py-2.5 font-medium tracking-wide text-white capitalize bg-black rounded-md hover:bg-gray-800 focus:outline-none focus:bg-gray-900 transition duration-300 transform active:scale-95 ease-in-out"
            >
              <%= image_tag "save-icon"%>
              <span class="pl-2 mx-1">建立訂位</span>
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class="mx-2 lg:flex">
      <div class="hidden w-4/5 lg:block lg:m-auto lg:w-1/4">
        <div class="mt-5 bg-white rounded-lg shadow">
          <div class="flex justify-center">
            <div>
              <%= image_tag "logo.png", class:" w-14 md:w-30 xl:w-30 py-2" %>
            </div>
            <h1 class="py-5 text-2xl font-semibold">新增訂位</h1>
          </div>
          <div class="px-5 pb-5">
            <div class="flex gap-2">
              <input type="date" class="iding-input"/>
              <input type="time" class="iding-input"/>
            </div>

            <div class="flex gap-2">
              <input placeholder="大人" class="iding-input"/>
              <input placeholder="小孩" class="iding-input"/>
            </div>

            <input placeholder="姓名" class="iding-input"/>
            <input placeholder="電話" class="iding-input"/>
            <textarea placeholder="備註" class="iding-textarea"></textarea>
            <input placeholder="桌號" class="iding-input"/>
          </div>

          <div class="flex flex-row-reverse py-6">
            <div class="flex-initial m-auto">
              <button
                type="button"
                class="flex items-center px-5 py-2.5 font-medium tracking-wide text-white capitalize bg-black rounded-md hover:bg-gray-800 focus:outline-none focus:bg-gray-900 transition duration-300 transform active:scale-95 ease-in-out"
              >
                <%= image_tag "save-icon"%>
                <span class="pl-2 mx-1">建立訂位</span>
              </button>
            </div>
          </div>
        </div>
      </div>

      <div class="w-full lg:w-3/4">
        <div class="mx-5 mt-5 bg-white rounded-lg shadow">
          <table class="table">
            <tr>
              <th>18:00</th>
            </tr>
            <tr>
              <td>
                <div class="items-center lg:flex">
                  <div class="avatar">
                    <div class="lg:w-24 lg:h-24">
                      <%= image_tag "cat-default-avatar.png", class:"hidden lg:inline"%>
                    </div>
                  </div>
                  <div>
                    <div class="text-sm font-bold lg:text-lg">黃色的 先生</div>
                    <div class="opacity-50 lg:inline lg:text-sm">0983 000 000</div>
                  </div>
                </div>
              </td>
              
              <td class="hidden max-w-sm lg:table-cell lg:max-w-xs">
                <div class="max-w-sm lg:max-w-xs">備註備註備註</div>
              </td>

              <td>
                <div class="items-center gap-10 lg:flex">
                  <div class="text-2xl text-center lg:text-3xl">2</div>
                  <div>
                    <button class="flex px-5 py-2 m-auto border-2 rounded-lg">
                      A1
                    </button>
                  </div>
                </div>
              </td>
              <td>
                <p class="text-xl lg:text-2xl">18:00</p>
              </td>
              <th>
                <button class="btn btn-ghost btn-xs">D</button>
              </th>
            </tr>

          </table>
        </div>
      </div>
    </div>
  </div>
</section>
