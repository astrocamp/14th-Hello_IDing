<%= form_with(model: @restaurant, data: { turbo: false }) do |f| %>

  <div>
    <%= f.label :name, "餐廳名稱" %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :english_name, "餐廳英文名稱" %>
    <%= f.text_field :english_name %>
  </div>

  <div>
    <%= f.label :tel, "餐廳電話"%>
    <%= f.text_field :tel %>
  </div>

  <div>
    <%= f.label :address, "餐廳地址" %>
    <%= f.text_field :address, size: 50 %>
  </div>

  <div>
    <%= f.label :description, "餐廳介紹" %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :UBN, "統編" %>
    <%= f.text_field :UBN %>
  </div>

  <div>
    <%= f.label :image, "餐廳形象照"%>
    <%= f.file_field :image %>
  </div>

  <%= f.submit %>
<% end %>