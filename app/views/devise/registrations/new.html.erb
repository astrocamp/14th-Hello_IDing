<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :tel %><br />
    <%= f.telephone_field :tel %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, size: 50 %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :image %><br />
    <%= f.text_field :image, size: 50 %>
  </div>

  <div class="field">
    <%= f.label :close_weekday %><br />
    <%= f.text_field :close_weekday %>
  </div>

  <div class="field">
    <%= f.label :open_hour %><br />
    <%= f.text_field :open_hour %>
  </div>

  <div class="field">
    <%= f.label :UBN , "UBN" %><br />
    <%= f.text_field :UBN %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
