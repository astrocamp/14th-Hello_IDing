<div class="min-h-screen hero bg-base-200 dark:bg-white">
  <div class="flex-col w-full hero-content lg:flex-row-reverse">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <div class="flex-shrink-0 w-full shadow-2xl card bg-base-100 dark:bg-white">
        <div class="card-body">
          <div class="form-control">
            <div class="flex px-12 m-auto mb-3">
              <h1 class="text-2xl font-bold text-right text-gray-600 md:text-3xl"><%= t('devise.Sign Up') %></h1>
              <%= image_tag "iding_logo.png", class:" inline w-36 m-auto md:w-30 xl:w-30" %>
            </div>
            <div class="field">
              <%= f.label :email, t('devise.Email'),class: "label dark:text-gray-700" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "Email", class: "cursor-pointer input input-bordered  text-black w-full px-4 py-2.5 mt-2 text-base transition duration-500 ease-in-out transform rounded-lg focus:bg-white focus:outline-none focus:shadow-outline focus:ring-gray-400 focus:ring-2 ring-offset-2  focus:border-gray-500 focus:border-transparent dark:bg-white", required: true %>
            </div>
          </div>

          <div class="form-control">
            <div class="field">
              <%= f.label :password, t('devise.Password'),class: "label dark:text-gray-700" %>
              <% if @minimum_password_length %>
              <span class="text-sm cursor-pointer dark:text-gray-700">( <%= t('devise.Password length limit minimum')%> <%= @minimum_password_length %> <%= t('devise.words')%> )</span>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "cursor-pointer input input-bordered  text-black w-full px-4 py-2.5 mt-2 text-base transition duration-500 ease-in-out transform rounded-lg focus:bg-white focus:outline-none focus:shadow-outline focus:ring-gray-400 focus:ring-2 ring-offset-2  focus:border-gray-500 focus:border-transparent dark:bg-white", required: true %>
            </div>
          </div>

          <div class="form-control">
            <div class="field">
              <%= f.label :password_confirmation, t('devise.Confirm Password'),class: "label dark:text-gray-700" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password", class: "cursor-pointer input input-bordered  text-black w-full px-4 py-2.5 mt-2 text-base transition duration-500 ease-in-out transform rounded-lg focus:bg-white focus:outline-none focus:shadow-outline focus:ring-gray-400 focus:ring-2 ring-offset-2  focus:border-gray-500 focus:border-transparent dark:bg-white", required: true%>
            </div>
          </div>

          <div class="mt-6">
            <div class="field">
              <%= f.submit t('devise.Sign Up'), class: "cursor-pointer w-full block bg-white hover:bg-gray-100 focus:bg-gray-100 text-gray-900 font-semibold rounded-lg px-4 py-3 border border-gray-300" %>
            </div>
          </div>
    <% end %>
    

      <div class="my-1 flex items-center before:mt-0.5 before:flex-1 before:border-t before:border-neutral-300 after:mt-0.5 after:flex-1 after:border-t after:border-neutral-300">
        <p class="mx-4 mb-0 font-semibold text-center dark:text-gray-700">OR</p>
      </div>

      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
        <div class="flex m-auto">
          <%= button_to omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "w-full bg-white hover:bg-gray-100 focus:bg-gray-100 text-gray-900 font-semibold rounded-lg px-4  border border-gray-300 " do %>
          <%= image_tag "google-icon.svg", class:"w-7 inline m-2" %> 
          <%= "Google 登入" %>
          <% end %>
        </div>
        <% end %>
      <% end %> 

          
      <p class="block w-full text-sm text-center dark:text-gray-700"><%= t('devise.Already have an account?')%><%= link_to t('devise.Login here'), new_session_path(resource_name), class:"text-blue-500 hover:text-blue-700 font-semibold mx-2" %> 
      </p>

      <div class="w-full text-center">
        <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
          <%= link_to t('devise.NotGettingEmail'), new_user_confirmation_path(resource_name), class:"text-sm text-blue-500 hover:text-blue-700 font-semibold mx-2" %>
        <% end %>
      </p>
    </div>      
    </div>
    <div class="w-full mb-4 text-center">
      <%= link_to '回首頁', root_path, class: "text-gray hover:text-teal-800 font-semibold" %>
    </div>  
  </div>

  <div class="hidden lg:block lg:text-left ">
    <%= image_tag "logo_column.png", class:" w-full py-2 m-auto md:w-30 xl:w-30" %> 
  </div>

</div>



