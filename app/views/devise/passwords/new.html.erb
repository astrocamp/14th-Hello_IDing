<div class="min-h-screen hero bg-base-200 dark:bg-white">
  <div class="flex-col w-full hero-content lg:flex-row-reverse">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="flex-shrink-0 w-full shadow-2xl card bg-base-100 dark:bg-white">
        <div class="card-body">
          <div class="form-control">
            <div class="flex px-12 m-auto mb-3">
              <h1 class="text-2xl font-bold text-right text-gray-600 md:text-2xl"><%= t('devise.Forgot password') %></h1>
              <%= image_tag "iding_logo.png", class:"  w-36 m-auto md:w-30 xl:w-30" %>
            </div>
            <div class="field">
              <%= f.label :email, t('devise.Email'),class: "label dark:text-gray-700" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "Email", class: "input input-bordered  text-black w-full px-4 py-2.5 mt-1 text-base transition duration-500 ease-in-out transform rounded-lg focus:bg-white focus:outline-none focus:shadow-outline focus:ring-gray-400 focus:ring-2 ring-offset-2  focus:border-gray-500 focus:border-transparent dark:bg-white", required: true %>
            </div>
          </div>

          <div class="actions">
            <%= f.submit t('devise.ResetPassword') ,class: "cursor-pointer w-full block bg-white hover:bg-gray-100 focus:bg-gray-100 text-gray-900 font-semibold rounded-lg px-4 py-3 mt-2 border border-gray-300" %>
          </div>
    <% end %>
          
      <p class="block w-full text-sm text-center dark:text-gray-700"><%= t('devise.Already have an account?')%><%= link_to t('devise.Login here'), new_session_path(resource_name), class:"cursor-pointer text-blue-500 hover:text-blue-700 font-semibold mx-2" %> 
      </p>
      <div class="w-full mt-3 text-center">
        <%= link_to '回首頁', root_path, class: "cursor-pointer text-gray hover:text-teal-800 font-semibold dark:text-gray-700" %>
      </div>  
    </div>
  </div>

  <div class="hidden lg:block lg:text-left ">
    <%= image_tag "logo_column.png", class:" w-full py-2 m-auto md:w-30 xl:w-30" %> 
  </div>

</div>